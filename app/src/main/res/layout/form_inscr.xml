        android:layout_alignParentTop="true"
        android:layout_marginTop="438.95dp"
        android:background="@drawable/rectangle_2"
        android:alpha="0.2"
        />

    <EditText
        android:id="@+id/ville"
        android:layout_width="117.04dp"
        android:layout_height="16.81dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="242.98dp"
