        android:layout_height="16dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="52.03dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="286dp"
        android:background="@drawable/frame_16"
        />

    <TextView
        android:id="@+id/num_tel"
        android:text="@string/num_tel"
        android:textAppearance="@style/num_tel"
        android:lineSpacingExtra="2sp"
        android:translationY="-1sp"
        android:gravity="center_horizontal|top"
        android:layout_width="93dp"
        android:layout_height="16dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="52.03dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="286dp"
        />

    <EditText
        android:id="@+id/android_exe"
        android:layout_width="154.35dp"
        android:layout_height="23dp"
        android:layout_alignParentStart="true"
