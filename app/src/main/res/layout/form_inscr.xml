        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="2sp"
        android:text="@string/adresse_ema"
        android:textAppearance="@style/adresse_ema"
        android:translationY="-1sp" />

    <EditText
        android:id="@+id/email_exemp"
        android:hint="@string/adresse_ema"
        android:layout_width="153.27dp"
        android:layout_height="23dp"
