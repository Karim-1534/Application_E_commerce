<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ajoutAnnonce"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/formulaire_">


    <TextView
        android:id="@+id/commandes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="51dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="0sp"
        android:text="@string/commande_recues"
        android:textAppearance="@style/titre" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:layout_below="@+id/commandes"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:elevation="20dp" />

    <Button
        android:id="@+id/btn_modif_commande"
        android:layout_width="315dp"
        android:layout_height="48dp"
        android:layout_below="@+id/listView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rectangle_3"
        android:gravity="center"
        android:text="@string/valider"
        android:textAppearance="@style/btn" />



</RelativeLayout>
