<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/formulaire_"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/formulaire_">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="360dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="11dp"
        android:background="@drawable/logo"
        android:contentDescription="@string/logo" />

    <!-- Bienvenue -->
    <TextView
        android:id="@+id/bienvenue"
        android:layout_width="257dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="34dp"
        android:lineSpacingExtra="5sp"
        android:translationY="-2.4sp"
        android:textAlignment="center"
        android:text="@string/bienvenue"
        android:textAppearance="@style/titre" />


    <!-- Nom d'utilisateur -->

    <TextView
        android:id="@+id/nom_d_utili"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="62.03dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/bienvenue"
        android:background="@drawable/frame_16"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="2sp"
        android:text="@string/username"
        android:textAppearance="@style/label"
        android:translationY="-1sp" />

    <EditText
        android:id="@+id/exemple_uer"
        android:layout_width="315dp"
        android:layout_height="48dp"
        android:layout_below="@+id/nom_d_utili"
        android:layout_alignParentStart="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="-10dp"
        android:autofillHints="name"
        android:background="@drawable/rectangle_2"
        android:gravity="center"
        android:hint="@string/username"
        android:inputType="textPersonName"
        android:lineSpacingExtra="10sp"
        android:textColorHint="@color/grey"
        android:textSize="12sp"
        android:translationY="-1.6sp" />

    <!-- Adresse email -->

    <TextView
        android:id="@+id/adresse_ema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/exemple_uer"
        android:gravity="center_horizontal|top"
        android:background="@drawable/frame_16"
        android:lineSpacingExtra="2sp"
        android:text="@string/adresse_email"
        android:textAppearance="@style/label"
        android:translationY="-1sp" />

    <EditText
        android:id="@+id/email_exemp"
        android:layout_width="315dp"
        android:layout_height="48dp"
        android:layout_below="@+id/adresse_ema"
        android:layout_alignParentStart="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="-10dp"
        android:autofillHints="emailAddress"
        android:background="@drawable/rectangle_2"
        android:gravity="center"
        android:hint="@string/adresse_email"
        android:inputType="textEmailAddress"
        android:lineSpacingExtra="3sp"
        android:textColorHint="@color/grey"
        android:textSize="12sp"
        android:translationY="-1.6sp" />

    <!-- Num_tel -->

    <TextView
        android:id="@+id/num_tel"
        android:text="@string/num_tel"
        android:textAppearance="@style/label"
        android:lineSpacingExtra="2sp"
        android:translationY="-1sp"
        android:gravity="center_horizontal|top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/frame_16"
        android:layout_alignParentStart="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/email_exemp"
        />

    <EditText
        android:id="@+id/android_exe"
        android:layout_width="315dp"
        android:layout_height="48dp"
        android:layout_below="@+id/num_tel"
        android:layout_alignParentStart="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="-10dp"
        android:autofillHints="phone"
        android:background="@drawable/rectangle_2"
        android:gravity="center"
        android:hint="@string/num_tel"
        android:inputType="phone"
        android:lineSpacingExtra="3sp"
        android:textColorHint="@color/grey"
        android:textSize="12sp"
        android:translationY="-1.6sp" />


    <!-- Adresse -->


    <TextView
        android:id="@+id/adresse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/android_exe"
        android:background="@drawable/frame_16"
        android:text="@string/adresse"
        android:textAppearance="@style/label"
        android:lineSpacingExtra="2sp"
        android:translationY="-1sp"
        android:gravity="center_horizontal|top"
        />

    <View
        android:id="@+id/adresse_case"
        android:layout_width="315dp"
        android:layout_height="110dp"
        android:layout_below="@+id/adresse"
        android:layout_alignParentStart="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="-10dp"
        android:alpha="0.2"
        android:background="@drawable/rectangle_2" />

    <EditText
        android:id="@+id/rue"
        android:layout_width="wrap_content"
        android:layout_height="24.66dp"
        android:layout_below="@+id/adresse"
        android:layout_alignParentStart="true"
        android:layout_marginStart="66.06dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="66.06dp"
        android:autofillHints="postalAddress"
        android:background="@drawable/rectangle_2"
        android:gravity="top"
        android:hint="@string/adresse"
        android:textColorHint="@color/grey"
        android:inputType="textPostalAddress"
        android:lineSpacingExtra="3sp"
        android:textSize="12sp"
        android:translationY="-1.3sp" />


    <EditText
        android:id="@+id/ville"
        android:layout_width="wrap_content"
        android:layout_height="24.66dp"
        android:layout_below="@+id/rue"
        android:layout_alignParentStart="true"
        android:layout_marginStart="224.73dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="66.06dp"
        android:autofillHints="postalAddress"
        android:background="@drawable/rectangle_2"
        android:gravity="top"
        android:inputType="textPostalAddress"
        android:lineSpacingExtra="3sp"
        android:translationY="-1.3sp"
        android:textColorHint="@color/grey"
        android:hint="@string/ville"
        android:textSize="12sp"/>


    <EditText
        android:id="@+id/cp"
        android:layout_width="wrap_content"
        android:layout_height="24.66dp"
        android:layout_below="@+id/rue"
        android:layout_alignParentStart="true"
        android:layout_marginStart="66.06dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="224.73dp"
        android:autofillHints="postalCode"
        android:background="@drawable/rectangle_2"
        android:gravity="top"
        android:hint="@string/code_postale"
        android:inputType="textPostalAddress"
        android:lineSpacingExtra="3sp"
        android:textColorHint="@color/grey"
        android:textSize="12sp"
        android:translationY="-1.3sp" />

    <!-- mot de passe -->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/adresse_case"
        android:background="@drawable/frame_16"
        android:id="@+id/mot_de_pass"
        android:text="@string/mot_de_pass"
        android:textAppearance="@style/label"
        android:lineSpacingExtra="2sp"
        android:translationY="-1sp"
        android:gravity="center_horizontal|top"
        />

    <EditText
        android:id="@+id/mdp_exemple"
        android:layout_width="315dp"
        android:layout_height="48dp"
        android:layout_below="@+id/mot_de_pass"
        android:layout_alignParentStart="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="-10dp"
        android:autofillHints="password"
        android:background="@drawable/rectangle_2"
        android:gravity="center_horizontal|center"
        android:hint="@string/mot_de_pass"
        android:inputType="textPassword"
        android:lineSpacingExtra="3sp"
        android:textColorHint="@color/grey"
        android:textSize="12sp"
        android:translationY="-1.6sp" />

    <!-- confirmation du mot de passe -->

    <TextView
        android:id="@+id/confirmatio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mdp_exemple"
        android:layout_alignParentStart="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/frame_16"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="2sp"
        android:text="@string/mdp_confirm"
        android:textAppearance="@style/label"
        android:translationY="-1sp" />

    <EditText
        android:id="@+id/mdp_confirm_exemple"
        android:layout_width="315dp"
        android:layout_height="48dp"
        android:layout_below="@+id/confirmatio"
        android:layout_alignParentStart="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="-10dp"
        android:background="@drawable/rectangle_2"
        android:gravity="center_horizontal|center"
        android:textColorHint="@color/grey"
        android:hint="@string/mdp_confirm"
        android:textSize="12sp"
        android:inputType="textPassword"
        android:lineSpacingExtra="3sp"
        android:translationY="-1.6sp"
        android:autofillHints="password" />

    <!-- S’inscrire -->
    <Button
        android:id="@+id/s_inscrire"
        android:layout_width="315dp"
        android:layout_height="48dp"
        android:layout_below="@+id/mdp_confirm_exemple"
        android:layout_alignParentStart="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#81AA66"
        android:text="@string/s_inscrire"
        android:textAppearance="@style/btn" />


</RelativeLayout>








