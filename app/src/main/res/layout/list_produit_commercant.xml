<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_5"
    >

    <!-- Nom du produit -->
    <TextView
        android:id="@+id/produit"
        android:layout_width="132dp"
        android:layout_height="23dp"
        android:layout_marginStart="167dp"
        android:layout_marginTop="20dp"
        android:text="@string/nom_produit"
        android:textAppearance="@style/item"
        android:lineSpacingExtra="6sp"
        android:gravity="center_vertical"

        />

    <!-- prix -->
    <TextView
        android:id="@+id/prix"
        android:layout_width="60dp"
        android:layout_height="23dp"
        android:layout_below="@+id/produit"
        android:layout_marginStart="168dp"
        android:layout_marginTop="10dp"
        android:text="@string/prix"
        android:textAppearance="@style/prix_en_"
        android:lineSpacingExtra="6sp"
        android:gravity="center_vertical" />

    <ImageView
        android:id="@+id/img_produit"
        android:layout_width="87dp"
        android:layout_height="77dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="39dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle_3"
        android:contentDescription="@string/image" />

    <CheckBox
        android:id="@+id/select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/produit" />

    <ImageButton
        android:id="@+id/supprimer"
        android:layout_width="27.29dp"
        android:layout_height="25.41dp"
        android:layout_below="@+id/select"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/produit"
        android:background="#999999"
        android:gravity="center"
        android:lineSpacingExtra="5sp"
        android:onClick="supprimer"
        android:src="@drawable/ic_baseline_close_24" />

</RelativeLayout>

