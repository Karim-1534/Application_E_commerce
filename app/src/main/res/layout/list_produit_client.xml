<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_5"
    >

    <!-- Nom du produit -->
    <TextView
        android:id="@+id/produit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="167dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="6sp"
        android:text="@string/nom_produit"
        android:textAppearance="@style/item"

        />

    <!-- prix -->
    <TextView
        android:id="@+id/prix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/produit"
        android:layout_marginTop="10dp"
        android:layout_marginStart="168dp"
        android:text="@string/prix"
        android:textAppearance="@style/prix_en_"
        android:lineSpacingExtra="6sp"
        android:gravity="center_vertical" />

    <!-- Nom du commerÃ§ant -->
    <TextView
        android:id="@+id/commercant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="167dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/prix"
        android:gravity="center_vertical"
        android:lineSpacingExtra="6sp"
        android:text="@string/nom_com"
        android:textAppearance="@style/item"

        />

    <ImageView
        android:id="@+id/img_produit"
        android:layout_width="87dp"
        android:layout_height="77dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="39dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle_3"
        android:contentDescription="@string/image" />

    <NumberPicker
        android:id="@+id/quantite"
        android:layout_width="27.29dp"
        android:layout_height="25.41dp"
        android:layout_below="@+id/produit"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/produit"
        android:max="20"
        android:min="1"
        android:orientation="vertical" />

    <ImageButton
        android:id="@+id/panier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/produit"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/quantite"
        android:gravity="center"
        android:lineSpacingExtra="5sp"
        android:onClick="addpanier"
        android:src="@drawable/ic_baseline_add_shopping_cart_24" />

</RelativeLayout>

